{
  "pageTitle": "Dynamic Form Page",
  "layout": "vertical",
  "components": [
    {
      "type": "Video",
      "colSpan": 2,
      "props": {
        "src": "https://sample-videos.com/video123/mp4/720/big_buck_bunny_720p_1mb.mp4",
        "controls": true
      }
    },
    {
      "type": "Dropdown",
      "colSpan": 2,
      "props": {
        "label": "Country",
        "name": "country",
        "value": "",
        "options": [
          { "value": "india", "label": "India" },
          { "value": "usa", "label": "USA" },
          { "value": "canada", "label": "Canada" }
        ],
        "validation": {
          "required": true,
          "errorMessage": "Please select a country."
        }
      }
    },
    {
      "type": "Textbox",
      "colSpan": 2,
      "props": {
        "label": "Name",
        "name": "name",
        "value": "",
        "placeholder": "Enter your name",
        "validation": {
          "required": true,
          "maxLength": 50,
          "errorMessage": "Name is required and should be less than 50 characters."
        }
      }
    }
  ]
}
